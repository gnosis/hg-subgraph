{
  "name": "Gnosis-Markets-Subgraph",
  "version": "0.1.0",
  "author": "Gnosis (https://gnosis.pm)",
  "description": "A subgraph for Gnosis Markets",
  "license": "LGPL-3.0",
  "scripts": {
    "create": "graph create Gnosis/GnosisMarkets --node https://api.thegraph.com/deploy/",
    "create-local": "graph create Gnosis/GnosisMarkets --node http://127.0.0.1:8020",
    "codegen": "graph codegen --debug --output-dir src/types/",
    "build": "graph build --debug",
    "deploy": "graph deploy Gnosis/GnosisMarkets --debug --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/",
    "deploy-local": "graph deploy Gnosis/GnosisMarkets --debug --ipfs http://localhost:5001 --node http://127.0.0.1:8020",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down -v",
    "docker:logs": "docker-compose logs --follow",
    "docker:build": "docker-compose build",
    "refresh-abi": "cd node_modules/@gnosis.pm/hg-contracts && truffle compile && cd ../../.. && node ops/abiGenerator.js",
    "migrate": "cd node_modules/@gnosis.pm/hg-contracts && echo 'module.exports={networks:{ganache:{host:\"localhost\",port:8545,network_id:\"*\"}}}' > truffle-local.js && truffle migrate --network=ganache --reset",
    "test": "npm run codegen && npm run deploy-local && mocha --exit",
    "create-deploy-local": "npm run create-local && npm run deploy-local",
    "create-test-pipeline": "npm run docker:down && npm run docker:up && npm run migrate && npm run create-local"
  },
  "devDependencies": {
    "@gnosis.pm/hg-contracts": "^0.2.2",
    "@graphprotocol/graph-cli": "^0.7.1",
    "@graphprotocol/graph-ts": "^0.5.0",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "axios": "^0.18.1",
    "bn.js": "^4.11.8",
    "chai": "^4.2.0",
    "delay": "^4.1.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^2.2.0",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.6",
    "mocha": "^6.1.4",
    "openzeppelin-solidity": "^2.2.0",
    "prettier": "^1.17.0",
    "tmp": "^0.1.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-register": "^6.26.0",
    "dotenv": "^7.0.0",
    "truffle": "^5.0.4",
    "truffle-contract": "^4.0.14",
    "truffle-hdwallet-provider": "^1.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
